<%= form_with(model: movie) do |f| %>
  <div>
    <%= f.label :title  %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :duration %>
    <%= f.text_field :duration %>
  </div>

  <div>
    <%= f.label :genres %>
    <%= f.collection_check_boxes :genre_ids, genres, :id, :description %>
  </div>

  <div>
    <%= f.submit "Crear" %>
  </div>




<% end %>